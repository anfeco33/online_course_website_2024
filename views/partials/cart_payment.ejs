<% var list_cart = data.list_cart %>
<% var total_price = 0 %>
<% list_cart.forEach(course => { %>
    <% total_price += course.coursePrice %>
<% }) %>

<button type="button" id="callback_btn" class="btn btn-secondary" onclick="callback('/home/course')">
    BACK
</button>

<style>
    .checkout-container {
        display: flex;
        flex-wrap: wrap;
        align-items: stretch;
        gap: 0; /* Khoảng cách giữa các items */
        margin: 0 auto; /* Để căn giữa container */
    }
    #payment-form, .course-details {
        flex: 1;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 20px;
        margin-top: 20px;
        border-radius: 0;
    }
    #payment-form {
        background: #4d84e2;
    }
    .course-details {
        margin-top: 24px;
        background: white;
        border: 1px solid #ced4da;
    }
    .course-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }
    .course-total {
        border-top: 1px solid #ced4da;
        padding-top: 10px;
        display: flex;
        justify-content: space-between;
    }
    .form-group {
        margin-bottom: 20px;
    }
    .form-control {
        height: 50px;
        padding: 10px 12px;
        font-size: 16px;
        line-height: 1.5;
        border: 1px solid #ced4da;
        border-radius: 5px;
        background-color: white;
        color: #495057;
    }
    #submit-payment {
        background-color: #f44336; 
        color: white;
        border: none;
        border-radius: 4px;
        padding: 12px 20px;
        margin-top: 20px;
        font-size: 18px;
        cursor: pointer;
    }
    #submit-payment:hover {
        background-color: #d32f2f;
    }
    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }
    .nameOnCard {
        width: 100%;
        border: none;
        outline: none;
        color: #aab7c4;
        opacity: 1; /* Firefox */
    }
</style>

<div class="checkout-container">
    <form id="payment-form" class="container mt-4 align-items-stretch border border-info">
        <h1><b>Checkout</b></h1>
        <!-- Thông tin thẻ -->
        <div class="form-group">
            <label for="owner">Name On Card</label>
            <div class="form-control">
                <input type="text" id="nameOnCard" class="nameOnCard" placeholder="Provide the exact name on card" required>
            </div>
        </div>
        <div class="form-group">
            <label for="card-number-element">Card Number</label>
            <div id="card-number-element" class="form-control"></div>
        </div>
        <div class="form-group">
            <label for="card-expiry-element">Expiration Date</label>
            <div id="card-expiry-element" class="form-control"></div>
        </div>
        <div class="form-group">
            <label for="card-cvc-element">CVC/CVV</label>
            <div id="card-cvc-element" class="form-control"></div>
        </div>
        <button type="submit" id="submit-payment" class="btn btn-warning">Complete Checkout</button>
    </form>

    
        <div class="course-details">
            <% list_cart.forEach(course => { %>
            <div class="course-item">
                <img src="<%= course.courseImage %>" alt="Course Image" style="width:50px; height:auto; margin-right:10px;">
                <div style="flex-grow:1; display:flex; justify-content:space-between; align-items:center;">
                    
                        <div><%= course.courseName %></div>
                        <div>₫<%= course.coursePrice.toLocaleString() %></div>
                   
                </div>
            </div>
            <% }) %>
            <div class="course-total">
                <strong>Total:</strong>
                <div>₫<%= total_price.toLocaleString() %></div>
            </div>
        </div>
    
    
</div>

<script src="https://js.stripe.com/v3/"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    var stripe = Stripe('pk_test_51P4JD5Rx965laN4zwIuCFeX5EcaH3BcbXl9MbICVl8ECPlhtwEMaDT3DmxfyK5sL5o44gc0lbif8u9gs7tthbRgr00rV1ODkjR');

    // Khởi tạo Stripe Elements
    var elements = stripe.elements();
    var style = {
    base: {
            color: "#32325d",
            fontFamily: '"Helvetica Neue", Helvetica, sans-serif',
            fontSmoothing: "antialiased",
            fontSize: "16px",
            "::placeholder": {
                color: "#aab7c4"
            }
        },
        invalid: {
            color: "#fa755a",
            iconColor: "#fa755a"
        }
};

    var cardNumber = elements.create('cardNumber', { style: style });
    var cardExpiry = elements.create('cardExpiry', { style: style });
    var cardCvc = elements.create('cardCvc', { style: style });
    cardNumber.mount('#card-number-element');
    cardExpiry.mount('#card-expiry-element');
    cardCvc.mount('#card-cvc-element');

    var form = document.getElementById('payment-form');
    form.addEventListener('submit', function(event) {
        event.preventDefault();
        stripe.createPaymentMethod('card', cardNumber).then(function(result) {
            if (result.error) {
                console.log(result.error.message); 
            } else {
                fetch('/create-cart-payment-intent', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        paymentMethodId: result.paymentMethod.id,
                        cardOwner: document.getElementById('nameOnCard').value
                    })
                })
                .then(function(response) {
                    if (!response.ok) {
                        throw new Error('Network response was not ok: ' + response.statusText);
                    }
                    return response.text(); // sử dụng .text() để xử lý không phải JSON
                })
                .then(function(text) {
                    try {
                        return JSON.parse(text); // Cố gắng phân tích cú pháp text thành JSON
                    } catch (err) {
                        throw new Error('Server response was not JSON: ', text);
                    }
                })
                .then(function(data) {
                    if (data.success) {
                        //showflashmessage("success", "Thank you for your payment!");
                        alert(data.message);
                        window.location.href = "/home/subscribed";
                        
                    } else {
                        showflashmessage("warning", "Payment failed:" + error.message);
                        // alert('Payment failed: ' + data.message);
                    }
                }).catch(function(error) {
                    console.error('Error:', error);
                    // showflashmessage("warning", "Payment failed: " + (error.message || 'Unknown error'));
                    alert('Payment failed: ' + error && error.message ? error.message : "Unknown error occurred.");
                });
            }
        });
    });

    function showflashmessage(type, message) {

        toastr[type](message)

        toastr.options = {
        "closeButton": true,
        "debug": false,
        "newestOnTop": false,
        "progressBar": false,
        "positionClass": "toast-top-right",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
        }
    }

</script>